{
    "version": 3,
    "configurePresets": [
        {
        "name": "MacOS",
        "displayName": "macOS Release",
        "description": "Build on macOS using AppleClang and Ninja",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/build/MacOS",
        "installDir": "${sourceDir}/out/install/MacOS",

        "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Release",

        "CMAKE_PREFIX_PATH": "/opt/homebrew;/usr/local"
        },

        "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
        },

        "architecture": {
        "value": "arm64",
        "strategy": "external"
        }
        },
        {
        "name": "Windows",
        "displayName": "Windows Release",
        "description": "Build on Windows using MSVC and vcpkg",
        "generator": "Visual Studio 17 2022",
        "binaryDir": "${sourceDir}/out/build/Windows",
        "installDir": "${sourceDir}/out/install/Windows",
        "cacheVariables": {
            "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "VCPKG_TARGET_TRIPLET": "x64-windows-static"
        },
        "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
        }
        }
    ],
    "buildPresets": [
        {
            "name": "Windows",
            "configurePreset": "Windows"
        },
        {
            "name": "MacOS",
            "configurePreset": "MacOS"
        }
    ]
}